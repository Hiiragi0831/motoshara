extends @pug/base

append globals
	- pageName = 'home'

append vars

block content
	.bg-overflow.is-hidden
	.site.home
		include @components/header/header
		main
			include @components/hero/hero
			include @components/category/category
			section.home__commodity
				.container
					h2 Популярные категории
					.home__commodity-row
						each val in [1, 2, 3, 4, 5, 6, 7, 8]
							include @components/commodity/commodity
			include @components/request/request
			+slider-partners()
			include @pages/home/about

		include @components/footer/footer
		include @components/analytics/analytics
